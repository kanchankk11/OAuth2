    <title>Login</title>
</head>
<body>
    
    <section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
        
            <div class="row col-md-7 col-lg-5 col-xl-5 d-flex align-items-center">
                <div class="d-flex align-items-center justify-content-between">
                    <p>Hello! {{user.displayName}}</p>
                    <img src="{{user.picture}}" alt="avatar" class="rounded-circle">
                </div>
                
                <a class="btn btn-primary btn-lg btn-block m-1 border border-white" style="background-color: #DC3545" href="/logout"
                        role="button">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i>Logout
                </a>

            </div>
        </div>
    </div>
    </section>
</body>
